<%= stylesheet_link_tag 'signup', media: 'all' %>
<div class="body">
    <div class="header signup-header">
        <div class="logo">
            <%= image_tag 'logo.svg', class: 'logo_img'%>
            <h3 class="logo_text">MedTrack</h3>
        </div>
        <h1>Sign Up</h1>
    </div>
    <%= form_with model: @user, url: users_path, html: { class: "form-class" } do |form| %>
        <div class="form-group top-group">
            <%= form.label :name, class: "label" %>
            <%= form.text_field :name, class: "input" %>
        </div>
        <div class="form-group">
            <%= form.label :email, class: "label" %>
            <%= form.text_field :email, class: "input" %>
        </div>
        <div class="form-group">
            <%= form.label :password, class: "label" %>
            <%= form.password_field :password, class: "input" %>
        </div>
        <div class="form-group remember-group">
            <%= form.check_box :remember_me, class: "checkbox-class" %>
            <%= form.label :remember_me, "Remember Me", class: "label checkbox-label" %>
        </div>
        <div class="form-group submit-group">
            <%= form.submit "Sign Up", class: "button submit-btn" %>
        </div>
    <% end %>
</div>